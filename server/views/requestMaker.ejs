<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="../css/style.css" rel="stylesheet">
        <script src="../js/requester.js" type="text/javascript"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
              <a class="navbar-brand logo">revive.digital</a>
              
            </div>
          </nav>
          <div class="container">
            <div class="row align-items-center">
                <form>
                <div class="col-6">
                    <span id="message"></span>
                    <div class="mb-3 mt-5">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="uidBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                Select (UUID)
                            </button>
                            <ul class="dropdown-menu dropdown-style" aria-labelledby="dropdownMenuButton1">
                                <% coins.forEach(function(obj, index) { %>
                                <li><a onclick="get(this)" class="dropdown-item" ><%= obj.uuid %></a></li>
                                <% }); %> 
                            </ul>
                            <input type="hidden" id="uid" />
                            </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" required class="form-control" id="price">
                    </div>
                    <div class="mb-3">
                        <label for="market" class="form-label">Market</label>
                        <input type="text" required class="form-control" id="market">
                    </div>
                    <div class="mb-3">
                        <div class="form-floating">
                            <textarea class="form-control message" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                            <label for="floatingTextarea" class="labelTxt">Leave a comment here</label>
                          </div>
                    </div>
                    
                    <button type="button" onclick="sendDta()" class="btn btn-primary">Send</button>
                </form>
                </div>
            </div>
          </div>
    </body>
</html>